<Window
    x:Class="XamlCustomClass.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XamlCustomClass"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="clr-namespace:SelectColorFromGrid;assembly=SelectColorFromGrid"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button
            Margin="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            test
        </Button>
        <src:ColorGridBox
            Margin="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            SelectionChanged="ColorGridBox_SelectionChanged" />
        <Button
            Margin="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            test
        </Button>
    </StackPanel>
</Window>
