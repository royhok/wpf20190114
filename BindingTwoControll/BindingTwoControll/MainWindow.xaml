<Window x:Class="BindingTwoControll.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BindingTwoControll" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Width="800" Height="450" mc:Ignorable="d">
    <StackPanel DataContext="{Binding ElementName=scrollbar}">
        <!--  Binding Source  -->
        <ScrollBar Name="scrollbar" Margin="24" LargeChange="10" Maximum="100" Minimum="1" Orientation="Horizontal" SmallChange="1" />

        <!--  Binding Targets  -->
        <Label HorizontalAlignment="Center" Content="{Binding Path=Value, Mode=OneWay}" />

        <Button Margin="24" HorizontalAlignment="Center"
                FontSize="{Binding Path=Value, Mode=OneWay}">
            Bound Button
        </Button>
    </StackPanel>
</Window>
