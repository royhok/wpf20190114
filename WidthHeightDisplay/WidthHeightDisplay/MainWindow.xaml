<Window x:Class="WidthHeightDisplay.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WidthHeightDisplay" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Width="800" Height="450" mc:Ignorable="d">
    <Grid Name="grid">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="{Binding ElementName=grid, Path=ActualWidth}" />
            <TextBlock Text=" &#x00D7; " />
            <TextBlock Text="{Binding ElementName=grid, Path=ActualHeight}" />
            <TextBlock Text=" device independent units" />
        </StackPanel>
    </Grid>
</Window>
