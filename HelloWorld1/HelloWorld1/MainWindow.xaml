<Window x:Class="HelloWorld1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="이름을 입력하세요" HorizontalAlignment="Left" Margin="55,45,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="37" Margin="278,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" FontSize="20"/>
        <Button x:Name="btnSayHello" Content="Say Hello!" HorizontalAlignment="Left" Margin="516,45,0,0" VerticalAlignment="Top" Width="117" FontSize="20" Height="37" Click="btnSayHello_Click"/>

    </Grid>
</Window>
