    <!--  EventSetter 예제  -->
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="24" />
            <EventSetter Event="Click" Handler="Button_Click" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button Name="Button1">
            Button Number 1
        </Button>
        <Button Name="Button2">
            Button Number 2
        </Button>
        <Button Name="Button3">
